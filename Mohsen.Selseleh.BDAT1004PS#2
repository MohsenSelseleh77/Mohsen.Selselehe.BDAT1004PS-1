    "def collatz(x):\n",
    "    if x == 1:\n",
    "        print (x)\n",
    "    elif x%2 == 0:\n",
    "        print(x)\n",
    "        x = x/2\n",
    "        collatz(x)\n",
    "    else:\n",
    "        print(x)\n",
    "        x = 3*x+1\n",
    "        collatz(x)\n",
    "        \n",
    "        \n"
   ]
