    "root = Tk()\n",
    "frame_calculator = Frame(root)\n",
    "labels = [['MC','M+','M-','MR'],\n",
    "          ['C','√','x²','+'],\n",
    "          ['7','8','9','-'],\n",
    "          ['4','5','6','*'],\n",
    "          ['1','2','3','/'],\n",
    "          ['0','.','+-','=']]\n",
    "for r in range(6):\n",
    "    for c in range(4):\n",
    "        # create label for row r and column c\n",
    "        label = Label(root,\n",
